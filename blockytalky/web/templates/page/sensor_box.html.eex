<div class="sensor-box panel text-center" data-name="<%= @sensor[:id] %>">
  <div class="sensor-name">
    <%= @sensor[:label] %>
  </div>
  <div class="sensor-value">
    -
  </div>
  <%= if @sensor[:type] == "sensor" do %>
    <div class=".center">
      <button href="#" data-dropdown="drop<%= @sensor[:id] %>" aria-controls="drop<%= @sensor[:id] %>" aria-expanded="false" class="button dropdown sensor-select">
        None
      </button><br>
      <ul id="drop<%= @sensor[:id] %>" data-dropdown-content class="f-dropdown" aria-hidden="true">
        <%= for type <- @sensor[:types] do %>
          <li class="sensor-select-option"><a href="#" data-sensor="<%= @sensor[:id] %>" data-value="<%= type[:id]%>"><%= type[:label] %></a></li>
        <% end %>
      </ul>
  <% end %>
</div>
